{
  "manifest_version": 3,
  "name": "No Translate",
  "version": "1.0",
  "description": "Prevents pages from being automatically translated.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "no-translate@your-alias-here",
      "strict_min_version": "109.0"
    }
  }
}